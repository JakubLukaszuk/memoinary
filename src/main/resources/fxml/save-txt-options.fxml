<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nihillon.controller.SaveTxtOptionsController">
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints />

    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints />
    </columnConstraints>

    <Label text="%title.saveTxtOptions" GridPane.columnSpan="2">
      <opaqueInsets>
         <Insets left="5.0" />
      </opaqueInsets>
      <GridPane.margin>
         <Insets left="5.0" />
      </GridPane.margin></Label>
    <CheckBox fx:id="categoryCheckBox" text="%column.category" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="5.0" />
      </GridPane.margin></CheckBox>
    <CheckBox fx:id="subCategoryCheckBox" text="%column.subCategory" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="5.0" />
      </GridPane.margin></CheckBox>
    <CheckBox fx:id="knowladgeStatusCheckBox" text="%column.knowledge" GridPane.columnIndex="2" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="5.0" />
      </GridPane.margin></CheckBox>
    <Button onAction="#save" text="%button.start" GridPane.columnIndex="3" GridPane.rowIndex="1">
      <GridPane.margin>
         <Insets left="5.0" />
      </GridPane.margin></Button>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</GridPane>
